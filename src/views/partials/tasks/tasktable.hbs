{{#if tasks}}
  <div class="">
    <table
      class="table table-responsive table-sm table-hover table-dark"
    >
      <thead>
        <tr>
          <th>N.</th>
          <th>Title</th>
          <th>Description</th>
          <th>Priority</th>
          <th>Operations</th>
        </tr>
      </thead>

      <tbody>
        {{#each tasks}}
          <tr>
            <td>{{@index}}</td>
            <td>{{title}}</td>
            <td>{{description}} </td>
            <td>{{important}}</td>
            <td>
              {{#if done}}
                <a href="/toogleDone/{{_id}}" class="btn btn-dark">Undone</a>
              {{else}}
                <a
                  href="/toogleDone/{{_id}}"
                  class="btn btn-success m-1"
                >Done</a>
              {{/if}}

              <a href="/delete/{{_id}}" class="btn btn-danger m-1">Delete</a>
              <a href="/edit/{{_id}}" class="btn btn-info m-1">Update</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}

  <div class="h-100 d flex align-items-center justify-content center">
    <div class="text-center text-white">
      <h1 class="pb-5"> No tasks</h1>
      <img src="/img/vacio.png" alt="Tabla vacia" class="w-25" />
    </div>
  </div>

{{/if}}